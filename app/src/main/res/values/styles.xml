<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:textColor">@color/bodyText</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base Styles -->

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ProgressBar" parent="@style/Theme.MaterialComponents">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="BodyText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/bodyText</item>
    </style>

    <style name="CaptionText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/hintText</item>
    </style>

    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">@dimen/button_width</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/bodyText</item>
        <item name="colorError">@color/error</item>
        <item name="boxStrokeColor">@color/text_input_colors</item>
        <item name="android:textColorHint">@color/hintText</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/bodyText</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="TextHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/headerText</item>
    </style>

    <style name="TextSectionHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/headerText</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Login -->

    <style name="TextInput.Login" parent="TextInputLayout">
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>

    <style name="FilledButton.Login" parent="FilledButton">
        <item name="android:layout_margin">@dimen/spacing_medium</item>
    </style>

    <style name="TextButton.Login" parent="TextButton">
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>


</resources>
